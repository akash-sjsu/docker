{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
            "name": "bankapi",
            "host": {
                "sourcePath": "/var/app/current/bankapi"
            }
        }
    ],
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "MONGODB_DATABASE",
                    "value": "bankapi"
                }
            ],
            "image": "mongo",
            "memory": 128,
            "name": "mongo"
        },
        {

            "image": "bank",
            "memory": 250,
            "name": "bank",

            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 3000
                }
            ]
        }
    ]
}
